# Production Environment Variables
# Copy this to .env.prod and fill in real values

# Django settings
DEBUG=False
SECRET_KEY=your-super-secret-key-generate-a-new-one
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database
POSTGRES_DB=fantasydb
POSTGRES_USER=fantasy_user
POSTGRES_PASSWORD=your-secure-password
DATABASE_URL=postgres://fantasy_user:your-secure-password@db:5432/fantasydb

# Redis
REDIS_URL=redis://redis:6379/1

# CORS (frontend URL)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Celery
CELERY_BROKER_URL=redis://redis:6379/0

# Optional: Sentry
# SENTRY_DSN=https://your-sentry-dsn
